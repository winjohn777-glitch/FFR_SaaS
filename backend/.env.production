# Production Environment Variables
# Florida First Roofing Accounting System

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/florida_first_roofing_prod"

# Server Configuration
PORT=5002
NODE_ENV=production

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Organization Configuration
DEFAULT_ORGANIZATION_ID=4d6eb8c6-95cc-41d8-bc8d-2f90be932a97

# Logging Configuration
LOG_LEVEL=info

# SSL Configuration (if using HTTPS)
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt

# External Services (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# File Storage (Optional)
UPLOAD_DIR=/var/uploads/florida-first-roofing
MAX_FILE_SIZE=10485760

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30